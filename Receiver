#include <SoftwareSerial.h>

// Receiver needs RX (9) to hear the radio
SoftwareSerial radio(9, 8); 

void setup() {
  Serial.begin(9600);
  radio.begin(9600);
  Serial.println("RX ready");
}

void loop() {
  // Check if 12 bytes (3 floats) are waiting in the buffer
  if (radio.available() >= 12) {

    float lat, lon, alt;

    // Read the raw bytes directly into the variables 
    radio.readBytes((uint8_t*)&lat, sizeof(lat));
    radio.readBytes((uint8_t*)&lon, sizeof(lon));
    radio.readBytes((uint8_t*)&alt, sizeof(alt));

    // Display the results [cite: 3]
    Serial.print("Received Lat: "); Serial.print(lat, 6);
    Serial.print(" | Lon: "); Serial.print(lon, 6);
    Serial.print(" | Alt: "); Serial.println(alt);
  }
}
